  {% endblock %}
  {% block footer %}
    <footer id="footer" class="site-footer">
      <div class="site-info container">
        <div class="row">
          <div class="col col-sm-3 col-md-3">
            {% if page.footer_1 %}
              {% block footer_1 %}
                {{ page.footer_1 }}
              {% endblock %}
            {% endif %}
          </div>
          <div class="col col-sm-3 col-md-3">
            {% if page.footer_2 %}
              {% block footer_2 %}
                {{ page.footer_2 }}
              {% endblock %}
            {% endif %}
          </div>
          <div class="col col-sm-3 col-md-3">
            {% if page.footer_3 %}
              {% block footer_3 %}
                {{ page.footer_3 }}
              {% endblock %}
            {% endif %}
          </div>
          <div class="col col-sm-3 col-md-3">
            {% if page.footer_4 %}
