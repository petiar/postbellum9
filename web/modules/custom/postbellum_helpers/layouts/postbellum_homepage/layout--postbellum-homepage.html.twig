{#
/**
 * @file
 * Default theme implementation for a two column layout.
 *
 * This template provides a two column display layout with full width areas at
 * the top, bottom and in the middle.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'layout',
  'layout--postbellum',
]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="row">
    {% if content.top %}
      <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top', 'col-xs-12', 'large') }}>
        {{ content.top }}
      </div>
    {% endif %}
    </div>

    <div class="row">
    {% if content.block_1_1 %}
      <div {{ region_attributes.block_1_1.addClass('layout__region', 'layout__region--first-above', 'col-md-8', 'col-sm-12', 'large') }}>
        {{ content.block_1_1 }}
      </div>
    {% endif %}

    {% if content.block_1_2 %}
      <div {{ region_attributes.block_1_2.addClass('layout__region', 'layout__region--second-above', 'col-md-4', 'col-sm-12', 'small') }}>
        {{ content.block_1_2 }}
      </div>
    {% endif %}
    </div>

    <div class="row">
    {% if content.block_2_1 %}
      <div {{ region_attributes.block_2_1.addClass('layout__region', 'layout__region--first-middle', 'col-md-4', 'col-sm-6', 'col-xs-12', 'small') }}>
        {{ content.block_2_1 }}
      </div>
    {% endif %}

    {% if content.block_2_2 %}
      <div {{ region_attributes.block_2_2.addClass('layout__region', 'layout__region--second-middle', 'col-md-4', 'col-sm-6', 'col-xs-12', 'small') }}>
        {{ content.block_2_2 }}
      </div>
    {% endif %}

    {% if content.block_2_3 %}
      <div {{ region_attributes.block_2_3.addClass('layout__region', 'layout__region--third-middle', 'col-md-4', 'col-sm-6', 'col-xs-12', 'small') }}>
        {{ content.block_2_3 }}
      </div>
    {% endif %}
    </div>

    <div class="row">
    {% if content.block_3_1 %}
      <div {{ region_attributes.block_3_1.addClass('layout__region', 'layout__region--first-below', 'col-md-6', 'col-xs-12', 'medium') }}>
        {{ content.block_3_1 }}
      </div>
    {% endif %}

    {% if content.block_3_2 %}
      <div {{ region_attributes.block_3_2.addClass('layout__region', 'layout__region--second-below', 'col-md-6', 'col-xs-12', 'medium') }}>
        {{ content.block_3_2 }}
      </div>
    {% endif %}
    </div>

    <div class="row">
      {% if content.block_4_1 %}
        <div {{ region_attributes.block_4_1.addClass('layout__region', 'layout__region--first-bottom', 'col-md-3', 'col-sm-6', 'col-xs-12', 'tiny') }}>
          {{ content.block_4_1 }}
        </div>
      {% endif %}

      {% if content.block_4_2 %}
        <div {{ region_attributes.block_4_2.addClass('layout__region', 'layout__region--second-bottom', 'col-md-3', 'col-sm-6', 'col-xs-12', 'tiny') }}>
          {{ content.block_4_2 }}
        </div>
      {% endif %}

      {% if content.block_4_3 %}
        <div {{ region_attributes.block_4_3.addClass('layout__region', 'layout__region--third-bottom', 'col-md-3', 'col-sm-6', 'col-xs-12', 'tiny') }}>
          {{ content.block_4_3 }}
        </div>
      {% endif %}

      {% if content.block_4_4 %}
        <div {{ region_attributes.block_4_4.addClass('layout__region', 'layout__region--fourth-bottom', 'col-md-3', 'col-sm-6', 'col-xs-12', 'tiny') }}>
          {{ content.block_4_4 }}
        </div>
      {% endif %}
    </div>

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom') }}>
        {{ content.bottom }}
      </div>
    {% endif %}
  </div>
{% endif %}
